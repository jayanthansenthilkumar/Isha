@app.post("/upload")
def handle_upload(req):
    """Handle file upload."""
    if not hasattr(req, 'files') or 'file' not in req.files:
        return "No file uploaded", 400
    
    uploaded_file = req.files['file']
    
    # Save file
    save_path = uploaded_file.save("uploads")
    
    # Record in database
    db.insert("files", {
        "filename": uploaded_file.filename,
        "path": save_path,
        "size": uploaded_file.size
    })
    
    logger.info(f"File uploaded: {uploaded_file.filename} ({uploaded_file.size} bytes)")
    
    # Redirect back to upload page
    from isha import Response
    res = Response()
    res.redirect("/upload")
    return res


