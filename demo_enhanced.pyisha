# ===== API ENDPOINTS WITH JSON =====
@app.get("/api/users")
def api_list_users(req):
    """API endpoint - list users as JSON."""
    users = db.query("SELECT id, username, email FROM users")
    return {"users": users, "count": len(users)}


@app.post("/api/users")
def api_create_user(req):
    """API endpoint - create user from JSON body."""
    if not req.json_body:
        return {"error": "JSON body required"}, 400
    
    username = req.json_body.get("username")
    email = req.json_body.get("email")
    
    if not username or not email:
        return {"error": "username and email required"}, 400
    
    try:
        db.insert("users", {"username": username, "email": email})
        logger.info(f"Created new user: {username}")
        return {"message": "User created", "username": username}, 201
    except Exception as e:
        logger.error(f"Failed to create user: {e}")
        return {"error": "Username already exists"}, 400


