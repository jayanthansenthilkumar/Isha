"""
ISHA Framework - Enhanced Feature Demo

Demonstrates all the new features:
- URL parameters (dynamic routes)
- JSON body parsing
- CORS support
- File uploads
- Rate limiting
- Response caching
- Structured logging
"""

from isha import (
    App, Database, 
    enable_cors, enable_rate_limiting, enable_request_logging,
    FileUploadHandler, ResponseCache, cached_route,
    Logger, LogLevel
)

# Initialize app
app = App(name="isha-enhanced-demo")
db = Database("demo_enhanced.db")
logger = Logger(name="demo", min_level=LogLevel.DEBUG)

# Enable features
enable_cors(app, origins=["*"])
enable_rate_limiting(app, requests_per_minute=100)
enable_request_logging(app, logger)

# File upload handler
upload_handler = FileUploadHandler(upload_dir="uploads", max_size_mb=10)

# Response cache
response_cache = ResponseCache(ttl=60)

@app.before
def handle_uploads(req):
    """Process file uploads automatically."""
    upload_handler.process(req)

# Initialize database
db.execute("""
    CREATE TABLE IF NOT EXISTS users (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        username TEXT UNIQUE NOT NULL,
        email TEXT NOT NULL,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )
""")

db.execute("""
    CREATE TABLE IF NOT EXISTS posts (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        user_id INTEGER,
        title TEXT NOT NULL,
        content TEXT NOT NULL,
        created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
        FOREIGN KEY (user_id) REFERENCES users(id)
    )
""")

db.execute("""
    CREATE TABLE IF NOT EXISTS files (
        id INTEGER PRIMARY KEY AUTOINCREMENT,
        filename TEXT NOT NULL,
        path TEXT NOT NULL,
        size INTEGER NOT NULL,
        uploaded_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
    )
""")

# Seed data
if not db.query("SELECT * FROM users"):
    db.insert("users", {"username": "alice", "email": "alice@example.com"})
    db.insert("users", {"username": "bob", "email": "bob@example.com"})
    db.insert("users", {"username": "charlie", "email": "charlie@example.com"})
    
    db.insert("posts", {"user_id": 1, "title": "First Post", "content": "Hello from Alice!"})
    db.insert("posts", {"user_id": 2, "title": "Bob's Thoughts", "content": "Interesting ideas..."})
    logger.info("Database seeded with sample data")


