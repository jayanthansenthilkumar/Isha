    """Get all posts (JSON)"""
    posts = db.query('''
        SELECT p.*, u.username as author_name 
        FROM posts p
        LEFT JOIN users u ON p.author_id = u.id
    ''')
    return {"success": True, "count": len(posts), "data": posts}

