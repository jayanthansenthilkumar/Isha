visit_count = 0

@app.before
def track_visits(req):
    """Track visits and add session support"""
    global visit_count
    visit_count += 1
    
    session = Session.decode(
        req.cookies.get("session", ""),
        config.get("SECRET_KEY")
    )
    req.session = session or Session(
        config.get("SECRET_KEY"),
        lifetime=config.get("SESSION_LIFETIME")
    )
    
    print(f"  ğŸŒ {req.method} {req.path} | Visits: {visit_count}")

@app.after
def add_security_headers(req, res):
    """Add security headers"""
    res.set_header("X-Content-Type-Options", "nosniff")
    res.set_header("X-Frame-Options", "DENY")
    res.set_header("X-Powered-By", "ISHA Framework")
    
    if hasattr(req, 'session') and req.session._modified:
        res.set_cookie("session", req.session.encode(), 
                      max_age=config.get("SESSION_LIFETIME"))
    
    return res

